@model vb.swifbac.com.Models.Registration
@{
    ViewBag.Title = "SWIFBAC VOLLEYBALL CLUB";
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<style>
    .editor-field-data-string {
        width: 120px;
    }

    .editor-field-data-number {
        width: 50px;
    }
</style>

<h2 style="margin-left:10px">
    <img src="../images/swifbac_Vb.jpg" />
    <br />
    <br />
    <hr />
    TEAM REGISTRATION FORM
</h2>
<br />
<br />

<div class="panel panel-default">
    @using (@Html.BeginForm("Submit", "TeamRegister", FormMethod.Post, new { @id = "regForm" }))
    {

    <table style="margin-left:10px">

        <tr>
            <td>Registration Type</td>
            <td>:</td>
            <td>

                <b>TEAM REGISTRATION</b>

            </td>

        </tr>

        <tr>
            <td>Team Name</td>
            <td>:</td>
            <td>
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "editor-field-data-string" } })
            </td>

        </tr>


        <tr>
            <td>Team Captain</td>
            <td>:</td>
            <td>
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "editor-field-data-string" } })
            </td>

        </tr>


        <tr>
            <td>Contact Phone Number</td>
            <td>:</td>
            <td>
                @Html.EditorFor(m => m.ContactPhone, new { htmlAttributes = new { @class = "editor-field-data-string" } })
            </td>

        </tr>


        <tr>
            <td style="vertical-align:top">Team Members</td>
            <td>&nbsp;</td>
            <td>  @Html.TextAreaFor(m => m.Comments, new { @cols = 5, @rows = 12})  </td>

        </tr>
    </table>


        <br />
        <br />
        <br />
        <input style="margin-left:10px" type="submit" value="Submit" id="btnSubmit" />
    }
</div>

<script>

    $(document).ready(function () {
        //your code here

        $("#btnSubmit").click(function (event) {

            var valid = true;

            if ($("#FirstName").val() == "") {
                $("#FirstName").focus();
                valid = false;
                alert('Team Name is required.')
            }

            if (($("#LastName").val() == "") && valid) {
                alert('Team Captain is required.')
                valid = false;
                $("#LastName").focus();
            }

            if ((($("#Age").val() == "") || $("#Age").val() == "0") && valid) {
                alert('Age is required.')
                valid = false;
                $("#Age").focus();
            }

            if (($("#ContactPhone").val() == "") && valid){
                alert('Contact Phone Number is required.')
                valid = false;
                $("#ContactPhone").focus();
            }


            if (!valid) {
                event.preventDefault();
            }
        });

    });
</script>