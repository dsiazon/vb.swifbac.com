@model vb.swifbac.com.Models.Roster
@{
    ViewBag.Title = "SWIFBAC ONLINE REGISTRATION";
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<style>
    .editor-field-data-string {
        width: 120px;
    }

    .editor-field-data-number {
        width: 50px;
    }
</style>

<h2 style="margin-left:10px">
    <img src="../images/fall-mens.jpg" />
    <br />
    <br />
    <hr />
    REGISTRATION FORM
</h2>
<br />
<br />

<div class="panel panel-default">
    @using (@Html.BeginForm("Submit", "Roster", FormMethod.Post, new { @id = "regForm" }))
    {

        <table style="margin-left:10px">

            <tr>
                <td>Preferred Division</td>
                <td>:</td>
                <td>

                    @Html.DropDownListFor(m => m.Division, Model.Divisions, new { htmlAttributes = new { @class = "editor-field-data-string" } })

                </td>

            </tr>

            <tr>
                <td>First Name</td>
                <td>:</td>
                <td>
                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "editor-field-data-string" } })
                </td>

            </tr>

            <tr>
                <td>Last Name</td>
                <td>:</td>
                <td>  @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "editor-field-data-string" } })  </td>

            </tr>

            <tr>
                <td>Age</td>
                <td>:</td>
                <td>  @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "editor-field-data-number" } })</td>

            </tr>

            <tr>
                <td>Contact Phone</td>
                <td>:</td>
                <td>  @Html.EditorFor(m => m.ContactPhone, new { htmlAttributes = new { @class = "editor-field-data-string" } })</td>

            </tr>

            <tr>
                <td>Email address</td>
                <td>:</td>
                <td>  @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "editor-field-data-string" } })</td>

            </tr>

            <tr>
                <td>Jersey Size</td>
                <td>:</td>
                <td>

                    @Html.DropDownListFor(m => m.Jerseysize, Model.Jerseysizes, new { htmlAttributes = new { @class = "editor-field-data-string" } })

                </td>

        </table>


        <br />
        <br />
        <br />
        <input style="margin-left:10px" type="submit" value="Submit" id="btnSubmit" />
    }
</div>

<script>

    $(document).ready(function () {
        //your code here

        $("#btnSubmit").click(function (event) {

            var valid = true;

            if ($("#FirstName").val() == "") {
                $("#FirstName").focus();
                valid = false;
                alert('Firstname is required.')
            }

            if (($("#LastName").val() == "") && valid) {
                alert('Lastname is required.')
                valid = false;
                $("#LastName").focus();
            }

            if ((($("#Age").val() == "") || $("#Age").val() == "0") && valid) {
                alert('Age is required.')
                valid = false;
                $("#Age").focus();
            }

            if (($("#ContactPhone").val() == "") && valid){
                alert('Contact Phone is required.')
                valid = false;
                $("#ContactPhone").focus();
            }


            if (!valid) {
                event.preventDefault();
            }
        });

    });
</script>