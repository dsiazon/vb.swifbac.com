<script>

    $(document).ready(function () {
        //your code here

        $("#btnSubmit").click(function (event) {

            var valid = true;

            if ($("#FirstName").val() == "") {
                $("#FirstName").focus();
                valid = false;
                alert('Team Name is required.')
            }

            if (($("#LastName").val() == "") && valid) {
                alert('Team Captain is required.')
                valid = false;
                $("#LastName").focus();
            }

            if (($("#ContactPhone").val() == "") && valid){
                alert('Contact Phone Number is required.')
                valid = false;
                $("#ContactPhone").focus();
            }


            if (!valid) {
                event.preventDefault();
            }
        });

    });
</script>